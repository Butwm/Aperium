<!DOCTYPE html>
<html dir="ltr" lang="sk-SK">
	<head>
		<HeadSEO />
		<script is:inline src="/Aperium/scripts/lenis/lenis.js"></script>
		<script is:inline>
		  const lenis = new Lenis({ smooth: true, smoothTouch: true });
	
		  function raf(time) {
			lenis.raf(time);
			requestAnimationFrame(raf);
		  }
	
		  requestAnimationFrame(raf);
		</script>
